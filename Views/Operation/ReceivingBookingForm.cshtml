    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script>

        // JSON Data
        const carData = [
            { id: 1, registration: "2f2434" },
            { id: 2, registration: "3frt244" },
            { id: 3, registration: "4gfg555" },
            { id: 4, registration: "5hhy323" },
            { id: 5, registration: "6jjj100" },
            { id: 6, registration: "7kkk999" },
            { id: 7, registration: "8lll888" },
            { id: 8, registration: "9mmm777" },
            { id: 9, registration: "0nnn666" },
            { id: 10, registration: "1ooo555" }
        ];

        $(document).ready(function () {
            // เติมข้อมูลลงใน Dropdown
            carData.forEach(car => {
                $('#carDropdown').append(
                    `<option value="${car.id}">${car.registration}</option>`
                );
            });

            // Event เมื่อผู้ใช้เลือกค่า
            $('#carDropdown').change(function () {
                const selectedId = $(this).val();
                const selectedCar = carData.find(car => car.id == selectedId);

                //if (selectedCar) {
                //    alert(`Selected Car ID: ${selectedCar.id}, Registration: ${selectedCar.registration}`);
                //} else {
                //    alert('No car selected');
                //}
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            const today = moment().format("YYYY-MM-DDTHH:mm");

            // ตั้งค่าวันที่ปัจจุบันสำหรับ Loading
            const startDateInput = document.querySelector("#Loading");
            startDateInput.value = today;
            startDateInput.setAttribute(
                "data-date",
                moment(today, "YYYY-MM-DDTHH:mm").format(startDateInput.getAttribute("data-date-format"))
            );

            const eta = document.querySelector("#eta");
            eta.value = today;
            eta.setAttribute(
                "data-date",
                moment(today, "YYYY-MM-DDTHH:mm").format(eta.getAttribute("data-date-format"))
            );

        });

        // อัปเดต data-date เมื่อเปลี่ยนแปลงค่า
        $("input[type='date']").on("change", function () {
            this.setAttribute(
                "data-date",
                moment(this.value, "YYYY-MM-DD").format(this.getAttribute("data-date-format"))
            );
        }).trigger("change");
    </script>


