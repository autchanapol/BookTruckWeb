@{
    ViewData["Title"] = "Departments";
}
<head>
    <!-- Bootstrap CSS -->
    @* <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> *@
</head>
@Html.AntiForgeryToken()
<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Departmens</h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a href="#">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Admin</a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Departments</a>
            </li>
        </ul>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Departmens Information</h4>
                    <button class="btn btn-primary btn-round ms-auto"
                            data-bs-toggle="modal"
                            data-bs-target="#addRowModal">
                        <i class="fa fa-plus"></i>
                        Add Departmens
                    </button>
                    @* <button class="btn btn-success" onclick="successClick('OK OK OK OK')">Success</button> *@
                </div>
            </div>
            <div class="row">
                <!-- Modal -->
                <div class="modal fade"
                     id="addRowModal"
                     tabindex="-1"
                     role="dialog"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header border-0">
                                <h5 class="modal-title">
                                    <span id="h_name" class="fw-mediumbold">New Row</span>
                                </h5>
                            </div>
                            <div class="modal-body">
                                <p class="small">
                                    Create a new row using this form, make sure you
                                    fill them all
                                </p>
                                <form>
                                    <input type="hidden" id="departmentId" />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label>Department Name</label>
                                                <input id="departmentName"
                                                       type="text"
                                                       class="form-control"
                                                       placeholder="fill name" />
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label>DPN</label>
                                                <input id="dpn"
                                                       type="text"
                                                       class="form-control"
                                                       placeholder="fill name" />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer border-0">
                                <button type="button"
                                        id="addDepartment"
                                        onclick="addDepartmentHandler()"
                                        class="btn btn-primary">
                                    Save
                                </button>
                                <button type="button"
                                        class="btn btn-danger"
                                        onclick="$('#addRowModal').modal('hide')">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End  Modal -->
                <div class="table-responsive">
                    <table id="departmentsTable"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Department Name</th>
                                <th>DPN</th>
                                <th>ACTION</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>No.</th>
                                <th>Department Name</th>
                                <th>DPN</th>
                                <th>ACTION</th>
                            </tr>
                        </tfoot>
                        <tbody>
                           @* data from Javascript *@
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
    
        // สร้าง Namespace สำหรับเก็บ URL
        var yourApp = yourApp || {};
        yourApp.Urls = yourApp.Urls || {};
        // Base URL ของแอป
        yourApp.Urls.baseUrl = '@Url.Content("~")';
        // URL สำหรับเรียก API GetDepartments
        yourApp.Urls.editUserUrl = '@Url.Action("GetDepartments", "Departments")';

        var add_dep = add_dep || {};
        add_dep.Urls = add_dep.Urls || {};
        add_dep.Urls.baseUrl = '@Url.Content("~")';
        add_dep.Urls.saveDep = '@Url.Action("InsertDepartments", "Departments")';


    </script>
    <script src="~/js/notify.js"></script>
    <script src="~/js/page/department.js"></script>

}